{
  "compileOnSave": false,
  "compilerOptions": {
    "lib": ["es2017", "dom"],
    "moduleResolution": "node",
    "target": "es6",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "rootDirs": [
      "./src"
    ],
    "baseUrl": "./",
    "paths": {
      "*": [
        "src/*"
      ]
    }
  },
  "exclude": [
    "typings/main",
    "typings/main.d.ts",
    "**/*.spec.tsx",
    "**/*.spec.ts",
    "src/stories"
  ]
}
